<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.RowConstraints?>

<HBox id="cardPane" fx:id="cardPane" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1">
  <VBox HBox.hgrow="ALWAYS" spacing="8">
    <padding>
      <Insets top="12" right="12" bottom="12" left="12" />
    </padding>

    <!-- NAME AND ID HEADER -->
    <HBox spacing="8" alignment="CENTER_LEFT">
      <Label fx:id="id" styleClass="cell_big_label" style="-fx-text-fill: #58a6ff; -fx-font-weight: bold;">
        <minWidth>
          <Region fx:constant="USE_PREF_SIZE" />
        </minWidth>
      </Label>
      <Label fx:id="name" text="\$first" styleClass="cell_big_label" style="-fx-font-size: 18px; -fx-font-weight: 600;" />
    </HBox>

    <!-- TAGS -->
    <FlowPane fx:id="tags" />

    <!-- STUDENT INFO GRID -->
    <GridPane hgap="12" vgap="6">
      <columnConstraints>
        <ColumnConstraints hgrow="NEVER" minWidth="80" prefWidth="80" />
        <ColumnConstraints hgrow="ALWAYS" />
      </columnConstraints>
      <rowConstraints>
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
      </rowConstraints>

      <!-- Student ID -->
      <Label text="Student ID:" GridPane.columnIndex="0" GridPane.rowIndex="0"
             style="-fx-text-fill: #8b949e; -fx-font-size: 11px; -fx-font-weight: 600;" />
      <Label fx:id="studentId" text="\$studentId" GridPane.columnIndex="1" GridPane.rowIndex="0"
             styleClass="cell_small_label" style="-fx-text-fill: #c9d1d9;" />

      <!-- Email -->
      <Label text="Email:" GridPane.columnIndex="0" GridPane.rowIndex="1"
             style="-fx-text-fill: #8b949e; -fx-font-size: 11px; -fx-font-weight: 600;" />
      <Label fx:id="email" text="\$email" GridPane.columnIndex="1" GridPane.rowIndex="1"
             styleClass="cell_small_label" style="-fx-text-fill: #c9d1d9;" />

      <!-- Modules -->
      <Label text="Modules:" GridPane.columnIndex="0" GridPane.rowIndex="2"
             style="-fx-text-fill: #8b949e; -fx-font-size: 11px; -fx-font-weight: 600;" />
      <Label fx:id="moduleCode" text="\$modules" GridPane.columnIndex="1" GridPane.rowIndex="2"
             styleClass="cell_small_label" style="-fx-text-fill: #c9d1d9;" />

      <!-- Attendance -->
      <Label text="Attendance:" GridPane.columnIndex="0" GridPane.rowIndex="3"
             style="-fx-text-fill: #8b949e; -fx-font-size: 11px; -fx-font-weight: 600;" />
      <Label fx:id="attendance" text="\$attendance" GridPane.columnIndex="1" GridPane.rowIndex="3"
             styleClass="cell_small_label" style="-fx-text-fill: #c9d1d9;" />
    </GridPane>

    <!-- GRADES SECTION -->
    <VBox spacing="4" style="-fx-background-color: rgba(137, 87, 229, 0.1); -fx-padding: 8; -fx-background-radius: 6;">
      <Label text="GRADES" style="-fx-text-fill: #8b949e; -fx-font-size: 10px; -fx-font-weight: 700; letter-spacing: 0.5px;" />
      <FlowPane fx:id="grades">
        <VBox.margin>
          <Insets top="2" />
        </VBox.margin>
      </FlowPane>
    </VBox>

  </VBox>
</HBox>
