<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<HBox id="cardPane" fx:id="cardPane" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1">
  <VBox HBox.hgrow="ALWAYS" spacing="10">
    <padding>
      <Insets top="14" right="16" bottom="14" left="16" />
    </padding>

    <!-- HEADER: Badge, Name, and Student ID on single row -->
    <HBox alignment="CENTER_LEFT" spacing="10">
      <!-- Index badge -->
      <Label fx:id="id" styleClass="id-badge-compact" style="-fx-min-width: 32; -fx-pref-width: 32; -fx-alignment: center;">
        <padding>
          <Insets top="4" right="6" bottom="4" left="6" />
        </padding>
      </Label>

      <!-- Name and Student ID stacked -->
      <VBox spacing="1" HBox.hgrow="ALWAYS">
        <Label fx:id="name" text="\$first" styleClass="name-label-compact" />
        <Label fx:id="studentId" text="\$studentId" styleClass="student-id-label" />
      </VBox>
    </HBox>

    <!-- ACADEMIC INFO - Compact Row -->
    <HBox spacing="12" alignment="CENTER_LEFT" styleClass="academic-section-compact">
      <padding>
        <Insets top="8" right="10" bottom="8" left="10" />
      </padding>

      <!-- Module -->
      <HBox spacing="6" alignment="CENTER_LEFT">
        <Label text="ðŸ“š" styleClass="icon-compact" />
        <Label fx:id="moduleCode" text="\$modules" styleClass="field-value-compact" />
      </HBox>

      <!-- Attendance -->
      <HBox spacing="6" alignment="CENTER_LEFT" HBox.hgrow="ALWAYS">
        <Label text="âœ“" styleClass="icon-compact" style="-fx-font-size: 14pt; -fx-font-weight: bold;" />
        <Label fx:id="attendance" text="\$attendance" styleClass="field-value-compact" />
      </HBox>
    </HBox>

    <!-- GRADES - Compact inline -->
    <HBox spacing="6" alignment="CENTER_LEFT" styleClass="grades-section-compact">
      <padding>
        <Insets top="8" right="10" bottom="8" left="10" />
      </padding>

      <Label text="ðŸŽ“" styleClass="icon-compact" style="-fx-font-size: 13pt;" />
      <FlowPane fx:id="grades" hgap="6" vgap="6" HBox.hgrow="ALWAYS" />
    </HBox>

    <!-- TAGS - Compact inline -->
    <FlowPane fx:id="tags" hgap="6" vgap="6" />

  </VBox>
</HBox>
